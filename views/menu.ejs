<div class="overlay"></div>
<link rel="stylesheet" href="/stylesheets/menu.css">
<button class="hamburger <%= backgroundColor %>">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="<%= fillColor %>" width="50" height="50">
        <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"/>
    </svg>
</button>
<div class="menuWrapper">
    <div class="menu">
        <button class="close">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" fill="white" width="50" height="50"><path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
        </button>
        <% ['Home', 'Events', 'Rewards', 'Account', 'Settings'].forEach(element => { %>
            <a class="<% if (element == currentPage) { %>active<% } %>" href="/<% if (element == currentPage) { %>#<% } else { if(element == 'Home') {%><%} else { %><%= element %><% }} %>">
                <%= element %>
              </a>
        <% }); %>
    </div>
</div>

<script>
    var menuWrapper = document.querySelector('.menuWrapper');
    var overlay = document.querySelector('.overlay');

    function openMenu() {
        console.log('Hamburger clicked');
        menuWrapper.style.width = '250px';
        overlay.style.display = 'block'; // Show the overlay
        document.body.addEventListener('click', closeMenuOnClickOff, true);
    }

    function closeMenu() {
        console.log('Closing menu');
        menuWrapper.style.width = '0';
        overlay.style.display = 'none'; // Hide the overlay
        document.body.removeEventListener('click', closeMenuOnClickOff, true);
    }

    function closeMenuOnClickOff(event) {
        if (!menuWrapper.contains(event.target) && event.target !== document.querySelector('.hamburger')) {
            closeMenu();
        }
    }

    document.querySelector('.hamburger').addEventListener('click', function(event) {
        event.stopPropagation(); // Prevent triggering closeMenuOnClickOff immediately
        openMenu();
    });
    document.querySelector('.close').addEventListener('click', closeMenu);
</script>

<style>
    .primary{
        background-color: var(--primary-color);
    }
    .secondary{
        background-color: var(--secondary-color);
    }
    .tertiary{
        background-color: var(--tertiary-color);
    }
</style>